<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:rgb(20, 0, 59)">
        <div class="container"  >
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Challenger", "Index", "Home", null, new { @class = "navbar-brand", @style = "color:white !important" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:white !important" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @style = "color:white !important" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:white !important" })</li>
                </ul>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "User",null, new { @style = "color:white !important" })</li>
                        <li>@Html.ActionLink("Logout", "LogOut", "User",null, new { @style = "color:white !important" })</li>
                        <li>@Html.ActionLink("My Account", "Details", "User",null, new { @style = "color:white !important" })</li>
                    </ul>
                </div>
            </div>           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Challenger Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
